{
  "name": "rise",
  "version": "1.0.0",
  "description": "rise",
  "author": {
    "name": "wotkad",
    "email": "wotkad@gmail.com",
    "url": "https://wotkad.ru"
  },
  "main": "src/bundle.js",
  "repository": "git@github.com:wotkad/rise.git",
  "license": "MIT",
  "scripts": {
    "build": "yarn lint-all && rimraf build && webpack --env mode=production --config ./webpack.config.js --progress && node ./node_scripts/changeSitemapUrls && node ./node_scripts/replaceErrorPage",
    "develop": "webpack serve --env mode=development --config ./webpack.config.js --progress",
    "compile-md": "yarn rimraf ./src/views/pages/blog/ && node ./node_scripts/markdownCompiler.mjs && node ./node_scripts/clearPug",
    "dev-network": "webpack serve --env mode=development --config ./webpack.config.js --progress --open --host 0.0.0.0 --disable-host-check",
    "dev": "yarn compile-md && yarn develop",
    "prettier-write:scss": "prettier --write './src/styles/**/*.scss' && node node_scripts/clearScss",
    "prettier-write:pug": "prettier --write './src/views/**/*.pug' && node ./node_scripts/clearPug",
    "lint-all": "yarn prettier-write:scss && yarn prettier-write:pug"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@barba/core": "^2.9.7",
    "@prettier/plugin-pug": "^2.4.1",
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "@webdiscus/pug-loader": "^2.10.2",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^9.1.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.28.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "enhanced-resolve": "^5.12.0",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.1.0",
    "html-webpack-plugin": "^5.5.0",
    "html2pug": "^4.0.0",
    "http-server": "^14.1.0",
    "markdown-it": "^13.0.1",
    "markdown-it-meta": "^0.0.1",
    "mini-css-extract-plugin": "^2.7.2",
    "node-sass": "^8.0.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^10.1.0",
    "postcss-import": "15.1.0",
    "postcss-loader": "^7.0.2",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "pug": "^3.0.2",
    "rimraf": "^4.1.2",
    "sass-loader": "^13.2.0",
    "sitemap-generator": "^8.5.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.2.7",
    "terser-webpack-plugin": "^5.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.38.1",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "gsap": "^3.9.1",
    "jquery": "^3.6.0",
    "lottie-web": "^5.9.1",
    "scroll-lock": "^2.1.5",
    "scrollreveal": "^4.0.9",
    "smooth-scroll": "^16.1.3"
  },
  "browserslist": [
    "defaults"
  ]
}
