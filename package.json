{
  "name": "rise",
  "version": "1.0.0",
  "description": "rise",
  "author": {
    "name": "wotkad",
    "email": "wotkad@gmail.com",
    "url": "https://wotkad.ru"
  },
  "main": "src/bundle.js",
  "repository": "git@github.com:wotkad/rise.git",
  "license": "MIT",
  "scripts": {
    "build": "yarn lint:all && yarn compile-md && rimraf build && webpack --env mode=production --config ./webpack.config.js --progress && node ./node_scripts/sitemap-update && node ./node_scripts/not-found-page-update && rimraf ./build/404",
    "develop": "webpack serve --env mode=development --config ./webpack.config.js --progress",
    "compile-md": "yarn rimraf ./src/views/pages/blog/ && node ./node_scripts/markdown-compiler.mjs && node ./node_scripts/pug-clear",
    "dev": "yarn compile-md && yarn develop",
    "lint:editorconfig": "yarn editorconfig-checker",
    "lint:scss": "prettier --write --loglevel silent './src/assets/styles/**/*.scss' && node node_scripts/scss-clear",
    "lint:pug": "node ./node_scripts/pug-clear && prettier --write --loglevel silent './src/views/**/*.pug' && node ./node_scripts/pug-clear",
    "lint:all": "yarn lint:editorconfig && node ./node_scripts/svg-clear && yarn lint:scss && yarn lint:pug && yarn lint:stylelint",
    "linkinator": "node ./node_scripts/linkinator.mjs",
    "lint:stylelint": "stylelint src/assets/styles/**/*.scss",
    "archive-paths": "node ./node_scripts/archive-paths"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.21.0",
    "@barba/core": "^2.9.7",
    "@prettier/plugin-pug": "^2.4.1",
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "@webdiscus/pug-loader": "^2.10.5",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^9.1.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.29.3",
    "browser-sync-webpack-plugin": "^2.3.0",
    "chalk": "^5.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.29.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "editorconfig-checker": "^5.1.1",
    "enhanced-resolve": "^5.12.0",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.1.0",
    "highlight.js": "^11.7.0",
    "html-webpack-plugin": "5.0.0",
    "html2pug": "^4.0.0",
    "http-server": "^14.1.0",
    "husky": "^4.3.8",
    "image-minimizer-webpack-plugin": "^3.8.3",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webpack-plugin": "^2.4.2",
    "linkinator": "^5.0.1",
    "lint-staged": "^14.0.1",
    "markdown-it": "^13.0.1",
    "markdown-it-meta": "^0.0.1",
    "mini-css-extract-plugin": "^2.7.2",
    "node-sass": "^8.0.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^10.1.0",
    "postcss-import": "15.1.0",
    "postcss-loader": "^7.0.2",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "pug": "3.0.2",
    "pug-loader": "^2.4.0",
    "rimraf": "^4.1.3",
    "robotstxt-webpack-plugin": "^8.0.0",
    "sass-loader": "^13.2.0",
    "sitemap-generator": "^8.5.1",
    "style-loader": "^3.3.1",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.1.0",
    "tailwindcss": "^3.2.7",
    "terser-webpack-plugin": "^5.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.38.1",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "gsap": "^3.9.1",
    "jquery": "^3.6.0",
    "scroll-lock": "^2.1.5",
    "scrollreveal": "^4.0.9",
    "smooth-scroll": "^16.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "yarn lint:editorconfig",
    "*.pug": "node ./node_scripts/svg-clear && yarn lint:pug --fix",
    "*.scss": "npm run lint:scss --fix && npm run lint:stylelint --fix"
  }
}
