{
  "name": "rise",
  "version": "1.0.0",
  "description": "rise",
  "author": {
    "name": "wotkad",
    "email": "wotkad@gmail.com",
    "url": "https://wotkad.ru"
  },
  "main": "src/bundle.js",
  "repository": "git@github.com:wotkad/rise.git",
  "license": "MIT",
  "bin": {
    "rise": "./plugins/rise/cli.js"
  },
  "lint-staged": {
    "src/**/*.scss": [
      "prettier --write",
      "yarn --silent lint:scss-files",
      "yarn --silent lint:stylelint"
    ],
    "src/**/*.pug": [
      "yarn --silent lint:pug-files",
      "prettier --write",
      "yarn --silent lint:pug-files",
      "yarn --silent lint:pug-mixins",
      "yarn --silent lint:js-defaults"
    ]
  },
  "scripts": {
    "build": "yarn --silent production",
    "production": "yarn --silent production:sequence",
    "production:sequence": "rimraf build && webpack --env mode=production --config ./webpack.config --progress && yarn --silent production:metatag && yarn --silent reports:sizes && yarn --silent reports:lighthouse && yarn --silent reports:a11y && yarn --silent minor:service-worker",
    "production:metatag": "node ./plugins/production/metatag",
    "production:archive-paths": "node ./plugins/production/archive-paths",
    "production:404": "node ./plugins/production/404",
    "minor:compile-md": "yarn --silent rimraf ./src/views/pages/blog/ && node ./plugins/minor/markdown.mjs && yarn --silent lint:pug-files",
    "minor:linkinator": "node ./plugins/minor/linkinator.mjs",
    "minor:service-worker": "node ./plugins/minor/service-worker",
    "dev": "yarn --silent development",
    "development": "concurrently --raw \"yarn --silent development:sequence\" \"node ./plugins/minor/images.js\"",
    "development:sequence": "yarn --silent reports:content && yarn --silent minor:compile-md && webpack serve --env mode=development --config ./webpack.config --progress",
    "lint:scss": "yarn --silent prettier --write  --loglevel silent './src/assets/styles/**/*.scss' && yarn --silent lint:scss-files && yarn --silent lint:stylelint",
    "lint:pug": "yarn --silent lint:pug-files && prettier --write --loglevel silent './src/views/**/*.pug' && yarn --silent lint:pug-files && yarn --silent lint:pug-mixins && yarn --silent lint:js-defaults",
    "lint:all": "yarn --silent lint:svg && yarn --silent lint:scss && yarn --silent lint:pug",
    "lint:stylelint": "stylelint src/assets/styles/**/*.scss",
    "lint:semicolon-tailwind": "node ./plugins/semicolon-tailwind",
    "lint:svg": "node ./plugins/lint/svg",
    "lint:scss-files": "node ./plugins/lint/scss-files",
    "lint:pug-files": "node ./plugins/lint/pug-files",
    "lint:pug-mixins": "node ./plugins/lint/pug-mixins",
    "lint:js-defaults": "node ./plugins/lint/js-defaults",
    "rise:one-page": "node ./plugins/rise/init -one-page",
    "rise:multi-page": "node ./plugins/rise/init -multi-page",
    "reports:sizes": "node ./plugins/reports/sizes",
    "reports:lighthouse": "NODE_NO_WARNINGS=1 && node ./plugins/reports/lighthouse",
    "reports:a11y": "node ./plugins/reports/a11y",
    "reports:content": "node ./plugins/reports/content",
    "prepare": "husky",
    "lint:staged": "lint-staged",
    "create:component": "node ./plugins/constructor/constructor"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.21.0",
    "@barba/core": "^2.10.0",
    "@prettier/plugin-pug": "^2.4.1",
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "@webdiscus/pug-loader": "^2.10.5",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^9.1.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^3.0.4",
    "browser-sync-webpack-plugin": "^2.4.0",
    "chalk": "^5.2.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.29.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "enhanced-resolve": "^5.12.0",
    "fast-glob": "^3.3.3",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.1.0",
    "glob": "^11.0.3",
    "glob-all": "^3.3.1",
    "highlight.js": "^11.7.0",
    "html-webpack-plugin": "5.0.0",
    "html2pug": "^4.0.0",
    "http-server": "^14.1.0",
    "husky": "^9.1.7",
    "image-minimizer-webpack-plugin": "^3.8.3",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webpack-plugin": "^2.4.2",
    "lighthouse": "^13.0.1",
    "linkinator": "^5.0.1",
    "lint-staged": "^16.2.6",
    "markdown-it": "^13.0.1",
    "markdown-it-meta": "^0.0.1",
    "mini-css-extract-plugin": "^2.7.2",
    "pa11y": "^9.0.1",
    "postcss": "^8.4.12",
    "postcss-cli": "^10.1.0",
    "postcss-import": "15.1.0",
    "postcss-loader": "^7.0.2",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "pug": "3.0.2",
    "pug-loader": "^2.4.0",
    "puppeteer": "^24.26.1",
    "purgecss-webpack-plugin": "^7.0.2",
    "rimraf": "^4.1.3",
    "robotstxt-webpack-plugin": "^8.0.0",
    "sass": "^1.93.2",
    "sass-loader": "^13.2.0",
    "sharp": "^0.34.4",
    "sitemap": "^8.0.2",
    "style-loader": "^3.3.1",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.1.0",
    "tailwindcss": "^3.4.17",
    "terser-webpack-plugin": "^5.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "gsap": "^3.9.1",
    "jquery": "^3.6.0",
    "scroll-lock": "^2.1.5",
    "scrollreveal": "^4.0.9",
    "smooth-scroll": "^16.1.3"
  }
}
