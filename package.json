{
  "name": "rise",
  "version": "1.0.0",
  "description": "rise",
  "author": {
    "name": "wotkad",
    "email": "wotkad@gmail.com",
    "url": "https://wotkad.ru"
  },
  "main": "src/bundle.js",
  "repository": "git@github.com:wotkad/rise.git",
  "license": "MIT",
  "scripts": {
    "build": "yarn lint-all && rimraf build && webpack --env mode=production --config ./webpack.config.js --progress && node ./src/scripts/changeSitemapUrls && node ./src/scripts/replaceErrorPageBuild",
    "develop": "webpack serve --env mode=development --config ./webpack.config.js --progress",
    "typecheck": "tsc --p .",
    "clear": "rimraf ./src/markdown/build && rimraf ./src/views/pages/blog/",
    "compile": "cross-env-shell babel src/markdown/constructor -d ./src/markdown/build --extensions '.mts'",
    "start": "yarn clear && yarn compile && node ./src/scripts/renameJsFiles && node ./src/markdown/build/index.mjs",
    "start-typecheck": "yarn typecheck && yarn start",
    "dev-network": "webpack serve --env mode=development --config ./webpack.config.js --progress --open --host 0.0.0.0 --disable-host-check",
    "dev": "yarn start-typecheck && rimraf ./src/markdown/build/decs.d.mjs && yarn develop",
    "eslint:pug": "eslint \"./src/views/**/*.pug\"",
    "prettier-write:scss": "prettier --write './src/assets/styles/**/*.scss' && node src/scripts/removeSemiColons",
    "prettier-write:pug": "node src/scripts/removeWhiteSpaces && prettier --write './src/views/**/*.pug'",
    "lint-all": "yarn eslint:pug && yarn prettier-write:scss && yarn prettier-write:pug"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@barba/core": "^2.9.7",
    "@prettier/plugin-pug": "^2.4.1",
    "@soda/friendly-errors-webpack-plugin": "^1.8.1",
    "@types/fs-extra": "^11.0.1",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.14.0",
    "@webdiscus/pug-loader": "^2.10.2",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^9.1.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "enhanced-resolve": "^5.12.0",
    "eslint": "^8.34.0",
    "eslint-plugin-pug": "^1.2.5",
    "file-loader": "^6.2.0",
    "fs-extra": "^11.1.0",
    "html-webpack-plugin": "^5.5.0",
    "html2pug": "^4.0.0",
    "http-server": "^14.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "markdown-it": "^13.0.1",
    "markdown-it-meta": "^0.0.1",
    "mini-css-extract-plugin": "^2.7.2",
    "node-sass": "^8.0.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^10.1.0",
    "postcss-import": "15.1.0",
    "postcss-loader": "^7.0.2",
    "postcss-modules": "^6.0.0",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "pug": "^3.0.2",
    "rimraf": "^4.1.2",
    "sass-loader": "^13.2.0",
    "sitemap-generator": "^8.5.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.2.7",
    "terser-webpack-plugin": "^5.1.3",
    "typescript": "^4.9.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.38.1",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/assets/styles/**/*.scss": "yarn prettier-write:scss",
    "./src/views/**/*.pug": [
      "yarn eslint:pug",
      "yarn prettier-write:pug"
    ]
  },
  "dependencies": {
    "gsap": "^3.9.1",
    "jquery": "^3.6.0",
    "lottie-web": "^5.9.1",
    "scroll-lock": "^2.1.5",
    "scrollreveal": "^4.0.9",
    "smooth-scroll": "^16.1.3"
  },
  "browserslist": [
    "defaults"
  ]
}
