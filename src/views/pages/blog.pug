extends ../layouts/master

block title
  title Rise | Блог

block basicSeo
  meta(content="Это страница блога" name="description")
  meta(content="Страница, блог" name="keywords")

block manifest
  link(href="../manifest.json" rel="manifest" crossorigin)

block content
  main
    .barba(data-barba="wrapper")
      .barba-container(data-barba="container" data-barba-namespace="blog")
        .page-container
          .page-wrapper
            +title({
              title: 'Блог',
            })
            include @p-components/blog
          include @p-components/footer