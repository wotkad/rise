extends @p-layouts/master
include @p-mixins/title

block title
  title Rise | Блог

block basicSeo
  meta(content="Это страница блога" name="description")
  meta(content="Страница, блог" name="keywords")
  link(href="/blog/" rel="canonical")

block content
  main
    .barba(data-barba="wrapper")
      .barba-container(data-barba="container" data-barba-namespace="blog")
        .page-container
          .page-wrapper
            +title({
              title: 'Блог',
            })
            include @p-custom-components/blog
          include @p-custom-components/footer