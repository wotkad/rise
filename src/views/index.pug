extends @p-layouts/master
include @p-mixins/title

block title
  title Rise | Главная

block basicSeo
  meta(content="Главная страница" name="description")
  meta(content="Главная, страница" name="keywords")
  link(href="/" rel="canonical")

block content
  main
    .barba(data-barba="wrapper")
      .barba-container(data-barba="container" data-barba-namespace="main")
        .page-container
          .page-wrapper
            +title({
              title: `<img src="${require("@images/logo.svg")}" alt="logo"> Добро пожаловать в Rise!`,
            })
            include @p-custom-components/intro
            include @p-components/blog-v1
            include @p-components/breadcrumbs-v1
            include @p-components/breadcrumbs-v2
            include @p-components/contact-v1
            include @p-components/content-v1
            include @p-components/content-v2
            include @p-components/content-v3
            include @p-components/customer-logos-v1
            include @p-components/features-v1
            include @p-components/footer-v1
            include @p-components/header-v1
            include @p-components/hero-v1
            include @p-components/pricing-v1
            include @p-components/team-v1
          include @p-custom-components/footer